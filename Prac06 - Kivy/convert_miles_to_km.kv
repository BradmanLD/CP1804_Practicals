BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: number_of_miles
            text: ''

        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: handle_increment(+1)
            Button:
                text: 'Down'
                on_press: handle_increment(-1)
    Button:
        text: 'Convert miles to kilometres'
        on_press:

    Label:
        id : output_label
        text: 'Enter a number of miles and click Convert miles to kilometres'
        color: (0, 1, 1, 1)