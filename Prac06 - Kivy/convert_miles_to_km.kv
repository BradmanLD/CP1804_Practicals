BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: number_of_miles
            size_hint: 1, 1
            text: ''

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.1
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
    Button:
        text: 'Convert miles to kilometres'
        on_press: app.calculate_miles_to_kilometres()

    Label:
        id: output_label
        text: 'Enter a number of miles and click Convert miles to kilometres'
        color: (0, 1, 1, 1)