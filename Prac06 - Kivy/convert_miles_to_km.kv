<Button>
    background_color: 0, 0, 0, 1
    color: 1, 1, 1, 1

BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: number_of_miles
            text: ''
            on_text: app.calculate_miles_to_kilometres()

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.1
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)

#    Button:   Not needed in Stage 2
#        text: 'Convert miles to kilometres'
#        on_press: app.calculate_miles_to_kilometres()

    Label:
        id: output_label
        text: 'Enter a number of miles to convert it to kilometres'
        color: (1, 1, 1, 1)